<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rgun.vktestapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screen.auth.AuthActivity"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible">
            <intent-filter>
                <data android:scheme="vk3974615" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vk.sdk.VKOpenAuthActivity"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:label="ServiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/VK.Transparent" />
        <activity
            android:name=".screen.photo.list.ActivityPhotoList"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".screen.photo.view.ActivityPhotoView"
            android:label="@string/app_name"/>
    </application>

</manifest>
